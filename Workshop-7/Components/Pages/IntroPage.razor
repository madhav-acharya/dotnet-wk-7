@page "/"

<div class="intro-container">
    <h1>Welcome to @CollegeName</h1>
    <div class="intro-image-container">
        <img src="@CollegeImage" alt="college image" class="intro-image"/>
    </div>

    <div class="intro-text">
        <p>@CollegeDescription</p>
    </div>
</div>

@code {
    private string CollegeImage = "images/college.png";
    private string CollegeName = "Islington College";
    private string CollegeDescription = 
        "Welcome to Islington College, where we empower students with knowledge, skills, and a bright future in the heart of the city. Our programs are designed to cultivate creativity, critical thinking, and practical experience. We offer modern facilities, vibrant campus life, and an environment where every student can thrive. Our faculty members are leaders in their fields, providing mentorship and guidance. Students enjoy a variety of extracurricular activities, clubs, and events for holistic development. Our alumni network is strong, offering career support and global connections.";
}